datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  date        DateTime
  location    String
  createdAt   DateTime @default(now())
}

model Club {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  createdAt   DateTime @default(now())
}

model Gallery {
  id        Int      @id @default(autoincrement())
  imageUrl  String
  caption   String?
  createdAt DateTime @default(now())
}

model StudentSpotlight {
  id        Int      @id @default(autoincrement())
  name      String
  story     String
  imageUrl  String?
  createdAt DateTime @default(now())
}

model BeyondCampus {
  id        Int      @id @default(autoincrement())
  title     String
  link      String
  createdAt DateTime @default(now())
}
